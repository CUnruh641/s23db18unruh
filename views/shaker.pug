extends layout

block content
  h1= title
  div Shaker
  
  - let items = results
  
  div(class="container-fluid")
    div(class="row")
    each item in results
      - let destination = `dispatch(\'/shaker/update?id=${item._id}\')`
      div(class="col-sm") Item #{item["shaker_type"]}(#{item["shaker_size"]}) is #{item["shaker_cost"]}
        button.btn(class='btn-primary ml-1', onclick= destination) Update
  script.
    function dispatch(path){
      window.location.href=path
    }
